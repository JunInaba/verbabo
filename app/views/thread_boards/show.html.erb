<html>
<body>
	<div id="container">
	<table>
	<% @comments.each do | comment | %>
		<tr>
			<td class="username">
			<%= comment.name %>
			</td>
			<td class=comment>
			「<%= comment.comment %>」
			</td>
		</tr>
	<% end %>


	</table>
	</div>



	<div id="footer">
		<div style="margin-left:auto;margin-right:auto;width:70%">
			<hr>
		</div>
		<div style="margin-left:auto;margin-right:auto;width:30em">



		<%= form_for(@comment) do | f | %>
			<%= f.text_field :name %><br>
			<%= f.text_area :comment, :size => "50x2"%>
			<%= f.hidden_field :thread_board_id, :value => @threadBoard.id%>


			<%= f.submit "書き込む" %>
		<% end %>

		</div>
	</div>

</body>
</html>


